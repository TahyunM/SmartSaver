<?xml version="1.0" encoding="utf-8"?>
<!-- The root layout is a LinearLayout with vertical orientation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView for displaying the total amount -->
    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <!-- TextView for displaying the upcoming payment -->
    <TextView
        android:id="@+id/tvUpcomingPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Payment:"
        android:textSize="16sp" />

    <!-- Button for navigating to the income details -->
    <Button
        android:id="@+id/btnIncomeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Income Details"
        android:layout_marginBottom="8dp"/>

    <!-- Button for navigating to the expense details -->
    <Button
        android:id="@+id/btnExpenseDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expense Details"
        android:layout_marginBottom="8dp"/>

    <!-- Button for navigating to the savings overview -->
    <Button
        android:id="@+id/btnSavingsOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Savings Overview"
        android:layout_marginBottom="8dp"/>

    <!-- Button for managing payments -->
    <Button
        android:id="@+id/btnManagePayments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Payments"
        android:layout_marginTop="16dp"/>

</LinearLayout>